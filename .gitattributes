* text=auto

# Always LF for cross-platform source files
*.sh   text eol=lf
*.py   text eol=lf
*.js   text eol=lf
*.ts   text eol=lf
*.jsx  text eol=lf
*.tsx  text eol=lf
*.yml  text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.md   text eol=lf

# Windows batch files keep CRLF
*.bat  text eol=crlf
*.cmd  text eol=crlf
