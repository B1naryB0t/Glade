FROM node:18-alpine AS builder

WORKDIR /app
COPY frontend/package.json ./

# Install without using package-lock.json (it's corrupted)
RUN npm install --legacy-peer-deps

COPY frontend/ .
RUN npm run build

# Production stage
FROM nginx:alpine

# Copy nginx config
COPY infrastructure/docker/nginx.prod.conf /etc/nginx/nginx.conf

# Copy frontend build
COPY --from=builder /app/dist /usr/share/nginx/html

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
