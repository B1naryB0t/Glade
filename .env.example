# Database (use RDS endpoint for production)
DB_PASSWORD=your_password_here
RDS_ENDPOINT=your-rds-endpoint.region.rds.amazonaws.com
DB_NAME=glade
DB_USER=glade
DB_HOST=${RDS_ENDPOINT}
DB_PORT=5432

# Django Security
SECRET_KEY=generate_a_secure_key_here
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,localhost

# Redis (Docker container)
REDIS_URL=redis://redis:6379/0

# CORS
CORS_ALLOWED_ORIGINS=https://yourdomain.com

# Instance Settings
INSTANCE_DOMAIN=yourdomain.com
INSTANCE_NAME=Glade
INSTANCE_DESCRIPTION=A privacy-focused local community
FEDERATION_ENABLED=False

# Location/Privacy Settings (optional)
DEFAULT_LOCATION_RADIUS=1000
MAX_LOCATION_RADIUS=50000
LOCATION_FUZZING_RADIUS=100

# Email (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password
DEFAULT_FROM_EMAIL=Glade <your_email@gmail.com>

# Django Settings Module
DJANGO_SETTINGS_MODULE=glade.settings.production
