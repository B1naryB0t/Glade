{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",     
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,

    "allowJs": true,  
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "types": ["vitest/globals", "@testing-library/jest-dom"]
  },
  "include": ["src", "**/*.ts", "**/*.tsx", "**/*.jsx"]
}
